<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#42484E</Color>
    <Color x:Key="PrimaryLight">#596066</Color>
    <Color x:Key="Secondary">#2D3237</Color>
    <Color x:Key="Text">#fff</Color>
    <Color x:Key="Shadow">#000000</Color>

    <Color x:Key="Orange500">#FF7A1A</Color>

    <Color x:Key="Purple100">#EFD2F6</Color>
    <Color x:Key="Purple200">#DF98F0</Color>
    <Color x:Key="Purple300">#D157EF</Color>
    <Color x:Key="Purple400">#BC3DDC</Color>
    <Color x:Key="Purple500">#A22CBF</Color>
    <Color x:Key="Purple600">#821C9B</Color>
    <Color x:Key="Purple700">#5A0E6D</Color>
    <Color x:Key="Purple800">#3C0849</Color>
    <Color x:Key="Purple900">#290432</Color>

    <LinearGradientBrush x:Key="Gradient"
                         StartPoint="0,1"
                         EndPoint="1,0">
        <GradientStop Color="{StaticResource Purple700}" Offset="0" />
        <GradientStop Color="{StaticResource Orange500}" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>