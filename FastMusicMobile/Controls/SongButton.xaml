<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="FastMusicMobile.Controls.SongButton">
    <Border BindingContext="{x:Reference this}" StrokeThickness="0">
        <Grid ColumnDefinitions="50, *" 
              HeightRequest="50"
              ColumnSpacing="10">
            <Border Background="{StaticResource Gradient}">
                <Border.Shadow>
                    <Shadow Opacity="0" />
                </Border.Shadow>
                <Label Text="&#xf001;" FontSize="24" FontFamily="FASolid" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Border>
            <Grid RowDefinitions="auto, auto"
                  Grid.Column="1"
                  VerticalOptions="Center"
                  RowSpacing="-5">
                <Label Text="{Binding Title}" FontSize="17" FontAttributes="Bold" />
                <Label Text="{Binding Artist}" FontSize="10" Grid.Row="1" />
            </Grid>
        </Grid>
    </Border>
</ContentView>
