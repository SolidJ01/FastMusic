<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="FastMusicMobile.Controls.AlbumButton">
    <Border BindingContext="{x:Reference this}" HeightRequest="90" Padding="0,0,10,0">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command}" CommandParameter="{Binding CommandParameter}" NumberOfTapsRequired="1" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="90, *"
              ColumnSpacing="10">
            <Border Background="{StaticResource Gradient}">
                <Grid>
                    <Label Text="&#xf51f;" FontFamily="FASolid" FontSize="43" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Image Source="{Binding Thumbnail, Converter={StaticResource ByteArrayToImageSourceConverter}}" Aspect="AspectFill" />
                </Grid>
            </Border>
            <FlexLayout Grid.Column="1" Direction="Column" JustifyContent="Center">
                <Label Text="{Binding Title}" FontSize="17" FontAttributes="Bold" MaxLines="2" LineBreakMode="TailTruncation" />
                <Label Text="{Binding Artist}" FontSize="11" Grid.Row="1" MaxLines="1" LineBreakMode="TailTruncation" />
            </FlexLayout>
        </Grid>
    </Border>
</ContentView>
