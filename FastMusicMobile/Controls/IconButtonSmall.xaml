<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="FastMusicMobile.Controls.IconButtonSmall">
    <Border BindingContext="{Reference this}">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command}" />
        </Border.GestureRecognizers>

        <Label Text="{Binding Icon}" FontSize="{Binding FontSize}" HorizontalOptions="Center" VerticalOptions="Center" FontFamily="FASolid" />
    </Border>
</ContentView>
