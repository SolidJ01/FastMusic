<?xml version="1.0" encoding="utf-8" ?>
<view:ControlBarPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FastMusicMobile.Controls"
             xmlns:model="clr-namespace:FastMusicMobile.Model"
             xmlns:view="clr-namespace:FastMusicMobile.View"
             xmlns:viewmodel="clr-namespace:FastMusicMobile.ViewModel"
             x:Class="FastMusicMobile.View.AlbumsPage"
             Title="AlbumsPage"
             x:DataType="viewmodel:AlbumsPageViewModel"
             CurrentlyPlaying="{Binding CurrentlyPlaying}"
             PlayPauseCommand="{Binding PlayPauseCommand}"
             NextCommand="{Binding NextCommand}"
             PreviousCommand="{Binding PreviousCommand}"
             ShuffleCommand="{Binding ShuffleCommand}"
             IsPlaying="{Binding IsPlaying}">
    <CollectionView ItemsSource="{Binding Albums, Mode=OneWay}" ItemSizingStrategy="MeasureFirstItem">
        <CollectionView.Header>
            <Grid HeightRequest="65" ColumnDefinitions="*, 65" Margin="0, 0, 0, 10">
                <HorizontalStackLayout Margin="10,10,10,5">
                    <Label Text="&#xf51f;" FontFamily="FASolid" FontSize="29" HorizontalOptions="Center" VerticalOptions="Center" Margin="10,0,10,0" />
                    <Label Text="Albums" FontSize="24" FontAttributes="Bold" VerticalOptions="Center" MaxLines="1" LineBreakMode="TailTruncation" />
                </HorizontalStackLayout>
            </Grid>
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="{x:Type model:Album}">
                <controls:AlbumButton Title="{Binding Name, Mode=OneTime}" Artist="{Binding Artist, Mode=OneTime}" Thumbnail="{Binding Thumbnail, Mode=OneTime}" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AlbumsPageViewModel}}, Path=GoToAlbumCommand, Mode=OneTime}" CommandParameter="{Binding ., Mode=OneTime}" Padding="10,0,10,10" IsClippedToBounds="False" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</view:ControlBarPage>