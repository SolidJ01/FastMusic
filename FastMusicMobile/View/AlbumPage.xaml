<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FastMusicMobile.Controls"
             xmlns:model="clr-namespace:FastMusicMobile.Model"
             xmlns:viewmodel="clr-namespace:FastMusicMobile.ViewModel"
             x:Class="FastMusicMobile.View.AlbumPage"
             Title="AlbumPage"
             x:DataType="viewmodel:AlbumPageViewModel">
    <Grid RowDefinitions="*, 70"
          RowSpacing="0"
          BackgroundColor="{StaticResource Secondary}">
        <CollectionView ItemsSource="{Binding Album.Songs}">
            <CollectionView.Header>
                <VerticalStackLayout>
                    <Border Background="{StaticResource Gradient}" Margin="0,20,0,10" HeightRequest="180" WidthRequest="180" StrokeShape="RoundRectangle 12" HorizontalOptions="Center">
                        <Grid>
                            <Label Text="&#xf51f;" FontFamily="FASolid" FontSize="86" HorizontalOptions="Center" VerticalOptions="Center" />
                            <Image Source="{Binding Album.Thumbnail, Converter={StaticResource StreamConverter}}" Aspect="AspectFill" />
                        </Grid>
                    </Border>
                    <Label Text="{Binding Album.Name}" FontSize="24" FontAttributes="Bold" Margin="20,0,20,0" />
                    <Label Text="{Binding Album.Artist}" FontSize="14" Margin="20,0,20,0" />
                    <FlexLayout Direction="Row" JustifyContent="End" AlignContent="Center" HeightRequest="60" Padding="20, 0, 10, 10" Wrap="NoWrap" IsClippedToBounds="False">
                        <Label Text="{Binding Album.Songs.Count, StringFormat='{0} Songs'}" FontSize="17" FontAttributes="Bold" VerticalTextAlignment="Center" FlexLayout.Grow="1" />
                        <controls:IconButtonSmall Icon="&#xf04b;" WidthRequest="50" />
                    </FlexLayout>
                </VerticalStackLayout>
            </CollectionView.Header>

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type model:Song}">
                    <controls:SongButton Title="{Binding Name}" Artist="{Binding Artist}" Thumbnail="{Binding Thumbnail}" Padding="10,0,10,10" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Grid ColumnDefinitions="50, *, 50"
              ColumnSpacing="10"
              Grid.Row="1"
              Padding="10,10,10,10"
              IsClippedToBounds="False">
            <controls:IconButtonSmall Icon="&#xf0c9;" />

            <controls:IconButtonSmall Icon="&#xf04b;" Grid.Column="2" />
        </Grid>
    </Grid>
</ContentPage>