<?xml version="1.0" encoding="utf-8" ?>
<view:ControlBarPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FastMusicMobile.Controls"
             xmlns:model="clr-namespace:FastMusicMobile.Model"
             xmlns:view="clr-namespace:FastMusicMobile.View"
             xmlns:viewmodel="clr-namespace:FastMusicMobile.ViewModel"
             x:Class="FastMusicMobile.View.AlbumPage"
             Title="AlbumPage"
             x:DataType="viewmodel:AlbumPageViewModel"
             CurrentlyPlaying="{Binding CurrentlyPlaying}"
             PlayPauseCommand="{Binding PlayPauseCommand}"
             NextCommand="{Binding NextCommand}"
             PreviousCommand="{Binding PreviousCommand}"
             ShuffleCommand="{Binding ShuffleCommand}"
             IsPlaying="{Binding IsPlaying}">
    <CollectionView ItemsSource="{Binding Album.Songs, Mode=OneWay}" ItemSizingStrategy="MeasureFirstItem">
        <CollectionView.Header>
            <VerticalStackLayout>
                <Border Background="{StaticResource Gradient}" Margin="0,20,0,10" HeightRequest="180" WidthRequest="180" StrokeShape="RoundRectangle 12" HorizontalOptions="Center">
                    <Grid>
                        <Label Text="&#xf51f;" FontFamily="FASolid" FontSize="86" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Image Source="{Binding Album.Thumbnail, Converter={StaticResource ByteArrayToImageSourceConverter}, Mode=OneTime}" Aspect="AspectFill" />
                    </Grid>
                </Border>
                <Label Text="{Binding Album.Name}" FontSize="24" FontAttributes="Bold" Margin="20,0,20,0" />
                <Label Text="{Binding Album.Artist}" FontSize="14" Margin="20,0,20,0" />
                <FlexLayout Direction="Row" JustifyContent="End" AlignContent="Center" HeightRequest="60" Padding="20, 0, 10, 10" Wrap="NoWrap" IsClippedToBounds="False">
                    <Label Text="{Binding Album.Songs.Count, StringFormat='{0} Songs', Mode=OneTime}" FontSize="17" FontAttributes="Bold" VerticalTextAlignment="Center" FlexLayout.Grow="1" />
                    <controls:IconButtonSmall Icon="&#xf04b;" WidthRequest="50" Command="{Binding PlayFromBeginningCommand}" />
                </FlexLayout>
            </VerticalStackLayout>
        </CollectionView.Header>

        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="{x:Type model:Song}">
                <controls:SongButton Song="{Binding ., Mode=OneWay}" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AlbumPageViewModel}}, Path=PlayFromSongCommand}" Padding="10,0,10,10" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</view:ControlBarPage>